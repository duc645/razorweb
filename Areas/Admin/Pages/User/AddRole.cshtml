@page "/admin/assign-user-role/{id}"
@model App.Admin.User.AddRoleModel
@{
    ViewData["Title"] = "Gán Role cho User";

}

<h4>Thiết lập Role cho thành viên: @Model.user.UserName</h4>
<partial name="_StatusMessage" for="StatusMessage" />

@* @{

    List<string> roleNames = new List<string>(){
            "Phan A ",
            "PHAN B",
            "PHAN C"
        };
    var allRoles = new SelectList(roleNames);
} *@

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleNames"></label>
                @* ở đây không dùng thẻ input cho dữ liệu Model mảng
                mà dùng HTML helper *@
                @* <input asp-for="RoleNames" class="form-control" /> *@
                @* m => m.RoleName : truyền model vào và chỉ ra thuộc tính của model *@
                @* tham số thứ 2 là selectList chứa các phần tử để user chọn*@
                @* tham số thứ 3 là các thứ như id , class của thẻ option
                ,là thẻ nằm trong thẻ select , ấn inspect để kiểm tra trên màn hình *@
                @* trình bày thẻ select để chọn các phần tử ở đây khá khó chịu
                , nên ta dùng jquery , có tên là : multiple-select : cs65 1:06:20*@
                @Html.ListBoxFor(m => m.RoleNames,Model.allRoles,new {
                    id = "id-select-roles",
                    @* class w-100 để cho ô select rộng ra *@
                    @class="w-100"
                    @*bỏ đi @class = "form-control" 
                    để nó trình bày css theo thư viện multiple-select*@
                } )
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-primary">Danh sách user</a>
        </form>
    </div>
</div>

@section Scripts {
    @* nạp thư viện js và css để sd jquery select-list *@
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />
    
    @* dùng thư viện đã nạp *@
    <script>
        $("#id-select-roles").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}