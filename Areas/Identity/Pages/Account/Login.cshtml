@page "/login"
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    //this.TempData["ErrorMessage"]

    // cái này để kiểm tra xem có lỗi ở ErrorMessage hay ko
    //this.TempData.ContainsKey("ErrorMessage")

    //gán lỗi vào biến để chuyền vào trang cshtml _StatuMessage
    var thongbao = TempData["ErrorMessage"];
}

<h1>@ViewData["Title"]</h1>

@* Kiểm tra xem có lỗi đc truyền vào ko *@
@if(TempData.ContainsKey("ErrorMessage"))
{
    //hiển thị lỗi dùng template _StatusMessage 
    //chỉ cần chuyền vào trang này model một biến kiểu string là đc
    <partial name="/Areas/Identity/Pages/Account/_StatusMessage.cshtml" model = "thongbao" />
}
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.UserNameOrEmail"></label>
                    <input asp-for="Input.UserNameOrEmail" class="form-control" />
                    <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng nhâp</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Quên tài khoản?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký tài khoản mới</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Gửi lại email xác thực</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Sử dụng các dịch vụ google, facebook ,.. để đăng nhập </h4>
            <hr />
            @{  
                @* Kiểm tra các dịch vụ đăng nhập như gg,face có hay ko , 
                được lưu trong thuộc tính ExternalLogins *@
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            Chưa cấu hình
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    //du lieu submit den asp-page : ExternalLogins nằm trong key name là provider , giá trị nó submit đến nằm trong thuộc tính value
                                    //vd có google thì nó submit provider = google
                                    //vd cos thêm facebook thì vẫn tên là provider = facebook
                                    //trang ExternalLogins nhận đc thì nó sẽ xử lý trong OnPost
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Đăng nhập với tài khoản @provider.DisplayName">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
